@model ClockViewModel

@{
    ViewBag.Model = "Chsss arena";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold mb-3">Welcome to Chess Arena</h1>
            <p class="lead mb-4">
                Challenge your mind with classic chess. Play against friends, AI, or join online tournaments. Track your stats and improve your skills!
            </p>
            <!-- Start Game Modal Button -->
            <button type="button" class="btn btn-primary btn-lg me-2 mb-2" data-bs-toggle="modal" data-bs-target="#Modal">
                Start game
            </button>
            <a href="@Url.Action("Leaderboard", "Home")" class="btn btn-outline-secondary btn-lg mb-2">Leaderboard</a>
        </div>  
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm bg-dark text-white">
                <div class="card-body text-center">
                    <i class="bi bi-controller display-4 mb-3"></i>
                    <h5 class="card-title mb-2">Play Online</h5>
                    <p class="card-text">Find opponents worldwide and test your skills in real-time chess matches.</p>
                    <a href="@Url.Action("PlayOnline", "Game")" class="btn btn-outline-primary">Start Match</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm bg-dark text-white">
                <div class="card-body text-center">
                    <i class="bi bi-cpu display-4 mb-3"></i>
                    <h5 class="card-title mb-2">Play vs AI</h5>
                    <p class="card-text">Practice and improve by playing against our AI at different difficulty levels.</p>
                    <a href="@Url.Action("PlayAI", "Game")" class="btn btn-outline-primary">Play AI</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm bg-dark text-white">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up display-4 mb-3"></i>
                    <h5 class="card-title mb-2">Statistics</h5>
                    <p class="card-text">View your game history, track your progress, and analyze your moves.</p>
                    <a href="@Url.Action("Stats", "Profile")" class="btn btn-outline-primary">View Stats</a>
                </div>
            </div>
        </div>
    </div> 

    <div class="row justify-content-center mb-5">
        <div class="card bg-dark text-white text-center shadow-sm">
            <div class="card-body">
                <strong>Tip:</strong> New to chess? <a href="@Url.Action("Tutorial", "Home")" class="text-primary fw-bold">Learn the rules and strategies</a> to get started!
            </div>
        </div>
    </div>
</div>

<!-- Start Game Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="ModalLabel">Start a New Game</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-0">
                <form asp-controller="Game" asp-action="Game" method="post" class="mb-3">
                    <label class="form-label mb-2 text-white">Time Control</label>
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <input type="number" name="Minutes" class="form-control bg-dark text-white border-secondary" style="width:80px;" placeholder="mm" aria-label="Minutes" required />
                        <span class="text-white">+</span>
                        <input type="number" name="Increment" class="form-control bg-dark text-white border-secondary" style="width:80px;" min="0" max="60" placeholder="inc" aria-label="Increment" required />
                        <span class="text-white">sec/move</span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        Start Game
                    </button>
                </form>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>






