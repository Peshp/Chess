@model ClockViewModel

@{
    ViewBag.Model = "Chsss arena";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold mb-3 text-white">Welcome to Chess Arena</h1>
            <p class="lead mb-4 text-secondary">
                Challenge your mind with classic chess. Play against friends, AI, or join online tournaments. Track your stats and improve your skills!
            </p>
            <button type="button" class="btn btn-primary btn-lg px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#Modal">
                <i class="bi bi-play-fill me-2"></i>Start Game
            </button>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-lg bg-dark text-white border-secondary">
                <div class="card-body d-flex flex-column text-center">
                    <i class="bi bi-globe display-4 mb-3 text-primary"></i>
                    <h5 class="card-title fw-bold">Play Online</h5>
                    <p class="card-text text-secondary flex-grow-1">Find opponents worldwide and test your skills in real-time chess matches.</p>
                    <div class="mt-auto pt-3">
                        <form asp-controller="Game" asp-action="PlayOnline" method="get">
                            <button type="submit" class="btn btn-outline-primary w-100 fw-bold py-2">
                                <i class="bi bi-person-plus me-2"></i>Start Match
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-lg bg-dark text-white border-secondary">
                <div class="card-body d-flex flex-column text-center">
                    <i class="bi bi-cpu display-4 mb-3 text-info"></i>
                    <h5 class="card-title fw-bold">Challenge AI</h5>
                    <p class="card-text text-secondary flex-grow-1">Practice your tactics against Stockfish. Choose your level and improve your game.</p>
                    <div class="mt-auto pt-3">
                        <form asp-controller="Game" asp-action="Game" method="get">
                            <input type="hidden" name="gameType" value="AI" />
                            <button type="submit" class="btn btn-primary w-100 fw-bold py-2 shadow-sm">
                                <i class="bi bi-robot me-2"></i>Play with AI
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-lg bg-dark text-white border-secondary">
                <div class="card-body d-flex flex-column text-center">
                    <i class="bi bi-graph-up-arrow display-4 mb-3 text-success"></i>
                    <h5 class="card-title fw-bold">Statistics</h5>
                    <p class="card-text text-secondary flex-grow-1">View your game history, track your ELO progress, and analyze your best moves.</p>
                    <div class="mt-auto pt-3">
                        <form asp-controller="User" asp-action="Profile" method="get">
                            <button type="submit" class="btn btn-outline-primary w-100 fw-bold py-2">
                                <i class="bi bi-bar-chart-line me-2"></i>View Stats
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="ModalLabel">Start a New Game</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Game" asp-action="Game" method="get" class="mb-3">
                    <input type="hidden" name="gameType" value="Normal" />

                    <label class="form-label mb-2 text-white fw-bold">Time Control</label>
                    <div class="d-flex align-items-center gap-2 mb-4">
                        <div class="flex-fill">
                            <small class="text-secondary d-block mb-1">Minutes</small>
                            <input type="number" name="Minutes" class="form-control bg-dark text-white border-secondary" placeholder="10" required />
                        </div>
                        <span class="mt-4 text-white">+</span>
                        <div class="flex-fill">
                            <small class="text-secondary d-block mb-1">Increment (sec)</small>
                            <input type="number" name="Increment" class="form-control bg-dark text-white border-secondary" min="0" max="60" placeholder="0" required />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold">
                        Start Match
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
