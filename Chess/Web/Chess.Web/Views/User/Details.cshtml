@model UserBoardsViewModel

<link rel="stylesheet" href="~/css/details.css" />

<form asp-controller="User" asp-action="Details" method="post" id="moveForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="boardId" value="@Model.BoardId" />
    <input type="hidden" name="toX" id="toX" />
    <input type="hidden" name="toY" id="toY" />
    <input type="hidden" name="figureId" id="figureId" />

    <div class="container my-5">
        <div class="row g-4">
            <div class="col-lg-8 d-flex justify-content-center">
                <div id="chess-board-container" class="shadow-lg rounded p-3 bg-dark border border-secondary"
                     style="border-width: 2px !important; position: relative; width: fit-content;">
                    @await Html.PartialAsync("_GamePartial", Model)
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-lg bg-dark border-secondary h-100" style="min-height: 650px;">

                    <div class="card-header bg-black border-secondary p-3">
                        <div class="d-grid gap-2">
                            <button type="button" id="btnNextMove" class="btn btn-primary btn-lg fw-bold text-uppercase shadow-sm">
                                <i class="bi bi-play-fill me-2"></i> Play Next Move
                            </button>

                            <a asp-controller="User" asp-action="Profile" class="btn btn-outline-info fw-bold">
                                <i class="bi bi-person-circle me-2"></i> Back to Profile
                            </a>
                        </div>

                        <div class="mt-3 d-flex justify-content-between align-items-center px-1">
                            <span class="text-muted small">Replay Progress</span>
                            <span class="badge bg-dark border border-primary text-primary" id="progressBadge" style="font-size: 0.9rem; padding: 0.5em 0.8em;">
                                Step 0 / @Model.MoveHistory.Count()
                            </span>
                        </div>
                    </div>

                    <div class="card-header bg-black text-primary border-secondary py-2">
                        <h6 class="mb-0 fw-bold text-uppercase" style="letter-spacing: 1px; font-size: 0.75rem;">Move History Log</h6>
                    </div>

                    <div class="card-body p-0" id="historyContainer" style="max-height: 400px; overflow-y: auto; background-color: #0f0f0f;">
                        <div class="list-group list-group-flush" id="moveList">
                            @{
                                var historyList = Model.MoveHistory.ToList();
                            }
                            @for (int i = 0; i < historyList.Count; i++)
                            {
                                var move = historyList[i];
                                bool isBlackMove = i % 2 != 0;

                                <div class="list-group-item border-secondary text-light d-flex justify-content-between align-items-center py-2 move-row"
                                     style="background-color: @(isBlackMove ? "#161616" : "transparent"); border-left: 4px solid transparent; cursor: default;"
                                     data-tox="@move.PositionX"
                                     data-toy="@move.PositionY"
                                     data-pieceid="@move.FigureId"
                                     data-index="@i">

                                    <div class="d-flex align-items-center">
                                        <span class="text-muted small fw-bold me-3" style="width: 25px;">@(i + 1).</span>

                                        <div class="p-1 rounded bg-dark border border-secondary me-3 d-flex align-items-center justify-content-center" style="width: 34px; height: 34px;">
                                            <img src="/images/pieces/@move.FigureImage" alt="piece" style="width: 26px; height: 26px; object-fit: contain;" />
                                        </div>

                                        <div>
                                            <span class="small text-muted d-block" style="line-height: 1; font-size: 0.6rem; margin-bottom: 2px; text-transform: uppercase;">
                                                @(isBlackMove ? "Black" : "White")
                                            </span>
                                            <span class="fw-bold @(isBlackMove ? "text-info" : "text-white")">@move.Coordinate</span>
                                        </div>
                                    </div>

                                    <i class="bi bi-check2-circle text-muted opacity-25"></i>
                                </div>
                            }
                        </div>

                        @if (!Model.MoveHistory.Any())
                        {
                            <div class="p-5 text-center text-muted">
                                <i class="bi bi-journal-x d-block mb-2" style="font-size: 2rem;"></i>
                                <p class="small italic">Empty History</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/js/details.js"></script>
