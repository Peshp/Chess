@model UserBoardsViewModel

<form asp-controller="User" asp-action="Details" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="boardId" value="@Model.BoardId" />

    <div class="container my-5">
        <div class="row g-4">
            <div class="col-lg-8">
                @await Html.PartialAsync("_GamePartial", Model)
            </div>

            <div class="col-lg-4">
                <div class="card bg-dark border-secondary">
                    <div class="card-header bg-black p-3">
                        <div class="d-grid gap-2">
                            @if (Model.Step < Model.MoveHistory.Count())
                            {
                                <button type="submit" class="btn btn-primary btn-lg fw-bold">
                                    <i class="bi bi-play-fill"></i> PLAY NEXT MOVE
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary btn-lg disabled">
                                    ANALYSIS FINISHED
                                </button>
                            }

                            <a asp-action="Profile" class="btn btn-outline-info">
                                BACK TO PROFILE
                            </a>
                        </div>

                        <div class="mt-3 text-center">
                            <span class="badge bg-dark border border-primary text-primary">
                                Step @Model.Step / @Model.MoveHistory.Count()
                            </span>
                        </div>
                    </div>

                    <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                        <div class="list-group list-group-flush">
                            @for (int i = 0; i < Model.MoveHistory.Count(); i++)
                            {
                                var move = Model.MoveHistory.ElementAt(i);
                                <div class="list-group-item @(i == Model.Step - 1 ? "bg-primary text-white" : "bg-dark text-muted")">
                                    @(i + 1). @move.Coordinate
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
