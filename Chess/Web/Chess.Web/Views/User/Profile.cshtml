@model IEnumerable<UserBoardsViewModel>

@{
    var currentUserId = ClaimsPrincipalExtension.GetId(User);

    var userBoards = (Model ?? Enumerable.Empty<UserBoardsViewModel>())
                     .Where(b => b.UserId == currentUserId)
                     .ToList();
}

<link rel="stylesheet" href="~/css/profile.css" />

<div class="profile-page">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 style="font-weight:700; color:#ffffff; margin:0;">Profile</h1>
                <p style="margin:4px 0 0 0; color:#bdbdbd;">Your saved games</p>
            </div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-sm" style="background-color:#2b2b2b; color:#e9e9e9; border:1px solid #333;">Home</a>
        </div>

        @if (!userBoards.Any())
        {
            <div class="card" style="background-color:#161616; border:1px solid #2a2a2a; color:#d6d6d6;">
                <div class="card-body">
                    <h5 class="card-title" style="color:#fff;">No saved boards</h5>
                    <p class="card-text" style="color:#bdbdbd;">You don't have any saved games yet. Play a match to save your first board.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var board in userBoards)
                {
                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 board-card">
                            <div class="board-preview-wrap">
                                <a asp-action="Details" asp-route-id="@board.BoardId" title="Open Game #@board.BoardId" style="display:inline-block; text-decoration:none; width:100%;">
                                    <div class="board-preview"
                                         style="background-image: url('@Url.Content($"~/images/{board.Image}")');">
                                        @{
                                            var unit = "%";
                                            Func<double, string> rawValueToCss = v =>
                                            {
                                                if (double.IsNaN(v) || double.IsInfinity(v)) return "0" + unit;
                                                return v.ToString("0.####", System.Globalization.CultureInfo.InvariantCulture) + unit;
                                            };
                                        }

                                        @if (board.Figures != null)
                                        {
                                            foreach (var f in board.Figures)
                                            {
                                                var left = rawValueToCss(f.PositionX);
                                                var top = rawValueToCss(f.PositionY);
                                                var pieceSrc = string.IsNullOrWhiteSpace(f.Image)
                                                ? Url.Content("~/images/figure-default.png")
                                                : Url.Content($"~/images/pieces/{f.Image}");
                                                <img src="@pieceSrc"
                                                     alt="@(f.Name ?? "piece")"
                                                     class="board-piece"
                                                     style="left:@left; top:@top;" />
                                            }
                                        }
                                    </div>
                                </a>
                            </div>

                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h5 class="card-title" style="margin:0; color:#ffffff;">Game #@board.BoardId</h5>
                                    </div>
                                    <div style="text-align:right;">
                                        <span class="badge" style="background-color:#2a2a2a; color:#e6e6e6; border:1px solid #333;">Figures: @(board.Figures?.Count() ?? 0)</span>
                                        <br />
                                        <span class="badge" style="background-color:#2a2a2a; color:#e6e6e6; border:1px solid #333; margin-top:6px;">Moves: @(board.MoveHistory?.Count() ?? 0)</span>
                                    </div>
                                </div>

                                <div style="flex:1;">
                                    <p style="margin:0 0 8px 0; color:#c9c9c9; font-size:0.95rem;">Recent moves:</p>
                                    <div>
                                        @if (board.MoveHistory != null && board.MoveHistory.Any())
                                        {
                                            var moves = board.MoveHistory.ToArray();
                                            var shown = moves.Take(12).ToArray();
                                            foreach (var m in shown)
                                            {
                                                <span class="badge rounded-pill" style="display:inline-block; margin:0 6px 6px 0; padding:6px 8px; background:#2e2e2e; color:#fff; border:1px solid #3b3b3b;">@m.Coordinate</span>
                                            }
                                            if (moves.Length > shown.Length)
                                            {
                                                <span class="badge rounded-pill" style="display:inline-block; margin:0 6px 6px 0; padding:6px 8px; background:#343434; color:#ddd; border:1px solid #444;">+@((moves.Length) - shown.Length) more</span>
                                            }
                                        }
                                        else
                                        {
                                            <span style="color:#9e9e9e;">No moves recorded</span>
                                        }
                                    </div>
                                </div>

                                <div class="mt-3 d-flex align-items-center">
                                    <div class="figure-list">
                                        @if (board.Figures != null && board.Figures.Any())
                                        {
                                            foreach (var f in board.Figures.Take(4))
                                            {
                                                <div class="figure-thumb">
                                                    <img src="@(string.IsNullOrWhiteSpace(f.Image) ? Url.Content("~/images/figure-default.png") : Url.Content($"~/images/pieces/{f.Image}"))" alt="@f.Name" style="width:100%; height:100%; object-fit:cover;" />
                                                </div>
                                            }
                                            if (board.Figures.Count() > 4)
                                            {
                                                <div class="figure-thumb" style="display:inline-flex; align-items:center; justify-content:center; color:#cfcfcf;">+@((board.Figures.Count()) - 4)</div>
                                            }
                                        }
                                        else
                                        {
                                            <div style="color:#9e9e9e;">No figures</div>
                                        }
                                    </div>

                                    <div class="ms-auto">
                                        <a asp-controller="User" asp-action="Details" asp-route-id="@board.BoardId" class="btn btn-sm" style="background-color:transparent; border:1px solid #3a3a3a; color:#eaeaea;">
                                            Details</a>
                                        <a asp-action="Play" asp-route-id="@board.BoardId" class="btn btn-sm ms-2" style="background-color:#0d6efd; border-color:#0d6efd; color:#fff;">Play</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
