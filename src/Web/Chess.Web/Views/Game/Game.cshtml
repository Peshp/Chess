@model BoardViewModel

@{
    ViewData["Title"] = "Chess Board";
}

<link rel="stylesheet" href="~/css/game.css" />

<style>
    .chess-board-container {
        position: relative;
        width: 90vw;
        max-width: 700px;
        aspect-ratio: 1 / 1;
        border: 5px solid #333;
        border-radius: 10px;
        overflow: hidden;
        background-color: #f8f9fa;
        box-shadow: 0 5px 20px rgba(0,0,0,0.2);
    }

    .chess-board-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }

    .figure-img {
        position: absolute;
        width: 12.5%;
        height: 12.5%;
        transition: transform 0.2s, filter 0.2s;
        cursor: pointer;
        z-index: 10;
    }

    .board-square {
        position: absolute;
        width: 12.5%;
        height: 12.5%;
        border: 1px solid rgba(0,0,0,0.04);
        z-index: 2;
        background: transparent;
        cursor: pointer;
        box-sizing: border-box;
    }

    .captured-figure-img {
        width: 32px;
        height: 32px;
        opacity: 0.85;
        filter: grayscale(0.18);
        border-radius: 5px;
        margin-right: 3px;
    }
</style>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-auto">
            <div class="d-flex flex-row align-items-start gap-4">
                <div>
                    <div class="chess-board-container mb-3" id="chess-board">
                        <img src="~/images/@Model.BoardImage" alt="Chess board" class="chess-board-background" />
                        @for (int y = 0; y < 8; y++)
                        {
                            for (int x = 0; x < 8; x++)
                            {
                                <div class="board-square"
                                     data-x="@x"
                                     data-y="@y"
                                     style="top:@(y * 12.5)%; left:@(x * 12.5)%;"></div>
                            }
                        }
                        @foreach (var figure in Model.Figures)
                        {
                            <img src="~/images/pieces/@figure.Image"
                                 alt="@figure.Name"
                                 id="piece-@figure.Id"
                                 class="figure-img"
                                 data-name="@figure.Name"
                                 data-color="@figure.Color"
                                 draggable="true"
                                 style="top:@figure.PositionY%; left:@figure.PositionX%;" />
                        }
                    </div>
                    <div class="card bg-dark text-light shadow-sm mb-2" style="min-width:180px;max-width:260px;">
                        <div class="card-header py-2">
                            <span class="h6 mb-0">Captured Pieces</span>
                        </div>
                        <div class="card-body py-2 d-flex flex-row flex-wrap gap-2" id="captured-pieces">
                            @foreach (var figure in Model.CapturedFigures)
                            {
                                <img src="~/images/pieces/@figure.Image"
                                     alt="@figure.Name"
                                     class="captured-figure-img" />
                            }
                        </div>
                    </div>
                </div>
                <div class="card move-history-panel shadow-sm" style="min-width:260px;max-width:340px;">
                    <div class="card-header py-2">
                        <span class="h6 mb-0">Move History</span>
                    </div>
                    <div class="card-body move-history-list px-2 py-2" id="move-history-list">
                        @if (Model.MoveHistory != null && Model.MoveHistory.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-start" style="width:45%">White</th>
                                            <th class="text-end" style="width:45%">Black</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.MoveHistory.Count; i += 2)
                                        {
                                            <tr>
                                                <td class="text-start">
                                                    @if (Model.MoveHistory[i] != null)
                                                    {
                                                        <img src="~/images/pieces/@Model.MoveHistory[i].FigureImage" alt="" style="width:20px;height:20px;vertical-align:middle;margin-right:2px;" />
                                                        @Model.MoveHistory[i].Coordinate
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    @if (i + 1 < Model.MoveHistory.Count && Model.MoveHistory[i + 1] != null)
                                                    {
                                                        <img src="~/images/pieces/@Model.MoveHistory[i + 1].FigureImage" alt="" style="width:20px;height:20px;vertical-align:middle;margin-left:2px;" />
                                                        @Model.MoveHistory[i + 1].Coordinate
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">No moves yet.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/game.js"></script>
