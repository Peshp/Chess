@model ClockViewModel

@{
    var color = ViewBag.Color ?? "white";
}

<div class="card shadow-sm mb-3 text-center"
     id="clock-@color"
     data-minutes="@Model.Minutes"
     data-increment="@Model.Increment">
    <div class="card-header py-1">
        <span class="small text-muted text-uppercase">@color</span>
    </div>
    <div class="card-body py-3">
        <span id="clock-value-@color"
              class="fw-bold text-dark"
              style="font-size:1.5rem;line-height:0.5;">
            @Model.Minutes.ToString("00"):00
        </span>
    </div>
</div>
